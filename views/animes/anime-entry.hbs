<div id="form">
  <h2>Create an Anime Entry</h2>
 
  <form action="/animes/anime-entry" method="POST">
 
    <label> Name:
      <input type="text" name="name" placeholder="name" />
    </label>
 
    <label> Genre:
      <input type="text" name="genre" placeholder="genre" />
    </label>

    <label> Rating:
        <input type="number" id="rating" name="rating" min="1" max="10" step="1" value="10">
    </label>
 
    <label> Synopsis:
      <textarea name="synopsis" cols="50" rows="20"></textarea>
    </label>

    <label for="img">Select an image:</label>
    <input type="file" id="img" name="img">
 
    <button type="submit">Create</button>
 
    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>