<div id="form">
  <h2>Edit an Anime Entry: {{show.name}}</h2>
 
  <form action="/animes/{{show._id}}/edit" method="POST" enctype="multipart/form-data">
 
    <label> Name:
      <input type="text" name="name" value="{{show.name}}" />
    </label>
 
    <label> Genre:
      <input type="text" name="genre" value={{show.genre}} />
    </label>

    <label> Rating:
        <input type="number" id="rating" name="rating" min="1" max="10" step="1" value={{show.rating}}>
    </label>
 
    <label> Synopsis:
      <textarea name="synopsis" cols="50" rows="20" >{{show.synopsis}}</textarea>
    </label>

    <label for="img">Select an image:</label>
    <input type="file" id="img" name="img" value={{show.img}}>
 
    <button type="submit">Save Changes</button>
 
    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>